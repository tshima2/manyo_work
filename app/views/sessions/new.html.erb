<h1><%= t('sessions.label_title_new') %></h1>
<%= form_with(scope: :session, url: sessions_path, local:true) do |form| %>
<%= form.label :email, t('sessions.label_email') %>
<%= form.email_field :email %>
<%= form.label :password, t('sessions.label_password') %>
<%= form.password_field :password %>
<%= form.label :password_confirmation, t('sessions.label_password_confirmation') %>
<%= form.password_field :password_confirmation %>
<%= form.submit t('sessions.label_submit_login'), id: 'new_session_submit' %>
<% end %>
