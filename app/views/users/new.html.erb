<h1><%= t('users.label_title_signup') %></h1>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>    
  
<%= form_with(model: @user, local: true) do |f| %>  
  <%= f.label :name, t('users.label_name') %>
  <%= f.text_field :name %>
  <%= f.label :email, t('users.label_email') %>
  <%= f.email_field :email %>
  <%= f.label :password, t('users.label_password') %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation, t('users.label_password_confirmation') %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit t('users.label_submit_signup'), id: 'new_user_submit' %>  
<% end %>
