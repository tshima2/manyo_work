<h1><%= t('admin.users.label_title_index') %></h1>

<table border=1>
  <tr>
    <th><%= t('admin.users.label_id') %> </th>      
    <th><%= t('admin.users.label_name') %> </th>
    <th><%= t('admin.users.label_email') %></th>
    <th><%= t('admin.users.label_admin') %></th>
    <th></th><th></th><th></th>          
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td class='user_row_id'><%= user.id %></td>
    <td class='user_row_name'><%= user.name %></td>
    <td class='user_row_email'><%= user.email %></td>                  
    <td class='user_row_admin'><%= user.admin %></td>
    <td class='user_row_show'><%= link_to t('admin.users.label_link_show'), admin_user_path(user.id) %></td>
    <td><%= link_to t('admin.users.label_link_edit'), edit_admin_user_path(user.id) %></td>
    <td><%= link_to t('admin.users.label_link_destroy'), admin_user_path(user.id), method: :delete, data: {confirm: t('admin.users.msg_confirm_destroy')} %></td>
  </tr>
  <% end %>  
</table>
<%= link_to t('admin.users.label_link_new'), new_admin_user_path %>
