<h1><%= t('admin.users.title_index') %></h1>

<table border=1>
  <tr>
    <th><%= t('admin.users.label_id') %> </th>      
    <th><%= t('admin.users.label_name') %> </th>
    <th><%= t('admin.users.label_email') %></th>
    <th><%= t('admin.users.label_admin') %></th>
    <th></th><th></th><th></th>          
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>                  
    <td><%= user.admin %></td>
    <td><%= link_to t('admin.users.label_link_show'), admin_user_path(user.id) %></td>
    <td><%= link_to t('admin.users.label_link_edit'), edit_admin_user_path(user.id) %></td>
    <td><%= link_to t('admin.users.label_link_destroy'), admin_user_path(user.id), method: :delete, data: {confirm: t('admin.users.msg_confirm_destroy')} %></td>
  </tr>
  <% end %>  
</table>
